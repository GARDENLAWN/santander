<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="checkout.payment.methods">
            <block name="checkout.payment.method.eraty_santander"
                   as="eraty_santander"
                   template="Snowdog_HyvaCheckoutSantander::component/payment/method/santander.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        Snowdog\Hyva\Checkout\Santander\Payment\Method\Santander
                    </argument>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="array">
                            <item name="src" xsi:type="string">Snowdog_HyvaCheckoutSantander::images/kup-na-eraty.svg</item>
                            <item name="attributes" xsi:type="array">
                                <item name="width" xsi:type="number">200</item>
                                <item name="height" xsi:type="string">revert-layer</item>
                                <item name="loading" xsi:type="string">lazy</item>
                                <item name="alt" xsi:type="string" translate="true">E-Raty</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
